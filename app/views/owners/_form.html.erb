<%= form_for @item do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br />
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br />
  <%= f.label :age %>
  <%= f.number_field :age %>
  <br />
  <%= f.label :race %>
  <%= f.text_field :race %>
  <br />
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br />
 
  <%= f.submit %>
<% end %>